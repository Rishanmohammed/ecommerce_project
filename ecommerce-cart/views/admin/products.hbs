  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Image</th>
    <th>Actions</th>
  </tr>
  {{#each products}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.description}}</td>
      <td>â‚¹{{this.price}}</td>
      <td><img src="{{this.image}}" alt="{{this.name}}" width="80" /></td>

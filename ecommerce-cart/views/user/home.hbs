<h2 class="text-center my-4">Products</h2>

<div class="container">
  <div class="row">
    {{#each products}}
    <div class="col-md-3 mb-4">
      <div class="card h-100 shadow-sm">
        <!-- Fixed square image box -->
        <div class="d-flex align-items-center justify-content-center" 
             style="width:100%; height:200px; overflow:hidden; background:#f8f9fa;">
          <img src="{{this.image}}" 
               alt="{{this.name}}" 
               style="width:100%; height:100%; object-fit:cover;" />
        </div>

        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <p class="fw-bold">â‚¹{{this.price}}</p>
          <!-- Add to Cart button -->
          <a href="/cart/add/{{this._id}}" class="btn btn-primary mt-auto">
            Add to Cart
          </a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

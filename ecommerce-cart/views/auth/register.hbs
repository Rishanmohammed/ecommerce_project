<h2 class="mb-4">Register</h2>

{{#if errors}}
  <div class="alert alert-danger">
    {{#each errors}}
      <p>{{this.msg}}</p>
    {{/each}}
  </div>
{{/if}}

<form action="/auth/register" method="POST" class="card p-4 shadow-sm">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" name="name" class="form-control" placeholder="Enter name" value="{{name}}" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Email</label>
    <input type="email" name="email" class="form-control" placeholder="Enter email" value="{{email}}" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Password</label>
    <input type="password" name="password" class="form-control" placeholder="Enter password" required>
  </div>

  <button type="submit" class="btn btn-primary w-100">Register</button>
</form>

<p class="mt-3">Already have an account? <a href="/auth/login">Login here</a></p>
